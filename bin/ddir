#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../lib', __dir__)
require 'ddir'

parse_opts = {
  errstream: $stderr,
  body:      <<-BODY.gsub(/^\s*/, ''),
    x + x
    x - @y
    x - @y
    abc.def.ghi
    -> (some_arg, other_arg) some_arg + x - y.abc 123 (x) x + @x + other_arg
  BODY
}

# doubt I'll ever get to this point, but w/e!
if ARGV.include? 'zomg'
  parse_opts[:body] = File.read 'zomg'
end

puts Ddir.generate Ddir.parse parse_opts
