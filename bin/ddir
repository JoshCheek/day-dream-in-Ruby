#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../lib', __dir__)
require 'ddir'

parse_opts = {
  errstream:    $stderr,
  parser_class: Ddir.build_parser(grammar_file: 'whatevz.treetop', compile: true),
  body:         <<-BODY.gsub(/^\s*/, ''),
    x + x
    x - @y
    x - @y
    x - @y
    x - @y
    abc.def.ghi
  BODY
}

# doubt I'll ever get to this point, but w/e!
if ARGV.include? 'zomg'
  parse_opts[:body] = File.read 'zomg'
end

p Ddir.parse parse_opts
